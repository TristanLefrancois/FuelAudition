@model Boolean
@{
    FuelAudition.Models.ApplicationUser utilisateur = (FuelAudition.Models.ApplicationUser)Session["Utilisateur"];
    ViewBag.Title = Resources.AccueilConnectTitre;
    ViewBag.Description = String.Format(Resources.AccueilConnectTitreMessage, utilisateur.NomComplet);
}



@if (!Model)
{
    <div class="callout callout-info">
        <h4><i class="fa fa-info-circle" style="margin-right:20px"></i>@Resources.AccueilConnectSansClientIdSousTitre</h4>

        <p>@Resources.AccueilConnectSansClientIdMessage</p>
        @Html.ActionLink(Resources.AccueilConnectSansClientIdLien, "Create")
    </div>


}
else
{
    <p>
        @Resources.AccueilConnectBienvenue
    </p>
    <div>
        <label class="control-label">@Resources.AccueilConnectSection1</label>
        
        <ul>
            <li>
                @Resources.AccueilConnectSection1Liste
            </li>
        </ul>
        <label class="control-label">@Resources.AccueilConnectSection2</label>
        
        <ul>
            <li>
                @Html.Raw(Resources.AccueilConnectSection2Liste)
            </li>
        </ul>
        <label class="control-label">@Resources.AccueilConnectSection3 </label>
       
        <ul>
            <li>
                @Resources.AccueilConnectSection3Liste
            </li>
        </ul>
        <label class="control-label">@Resources.AccueilConnectSection4</label>
            
            <ul>
                <li>
                    @Html.Raw(Resources.AccueilConnectSection4Liste)
        
                </li>
            </ul>

       
    </div>
    <p>
        <label class="control-label">@Resources.AccueilConnectSection5</label>
        <br />
        @Resources.AccueilConnectSection5Paragraphe1
        
    </p>
    <p>
        @Resources.AccueilConnectSection5Paragraphe2
    </p>
    <p>
        @Resources.AccueilConnectSection5Paragraphe3
    </p>
    <p>
        <label class="control-label">@Resources.AccueilConnectSection6</label>
        <br /> 
        @Html.Raw(Resources.AccueilConnectSection6Paragraphe1)
    </p>
}

