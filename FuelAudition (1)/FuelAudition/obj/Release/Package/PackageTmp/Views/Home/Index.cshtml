<div id="page">
    <div id="container">
        <div id="parallax">
            <div class="fond">
                &nbsp;
                <div class="logo contenu">
                </div>
                <div id="texteLogo" style="">
                    <div>@Resources.AccueilSloganPartie1</div>
                    <div>@Resources.AccueilSloganPartie2</div>
                </div>

            </div>
            <!--
            -->
            <div class="fond" style="background-color: #D32A2F; z-index: 1000;">
                &nbsp;
                <div class="contenu">
                    <h2>@Resources.AccueilTitreIntroduction</h2>
                    <div class="col-md-6">
                        <p>
                            @Resources.AccueilIntroductionParagraphe1

                        </p>
                        <p>
                            @Html.Raw(Resources.AccueilIntroductionParagraphe2)

                        </p>
                        <p>
                            @Resources.AccueilIntroductionParagraphe3
                        </p>

                    </div>
                    <div class="col-md-6">

                        <p>
                            @Resources.AccueilIntroductionParagraphe4
                        </p>
                        <p>
                            @Resources.AccueilIntroductionParagraphe5
                        </p>
                        <p>
                            @Resources.AccueilIntroductionParagraphe6
                        </p>

                    </div>

                </div>
            </div>
            <!--
            -->
            <div id="camion" class="fond">
                &nbsp;
                <div class="contenu">
                    <div class="boiteNoire" style="width:90%">
                        <h2>@Resources.AccueilTitreRoute</h2>
                    </div>


                </div>
                <div class="static leftRight">
                    <i class="fa fa-cloud" style="margin-right:3px;color:whitesmoke"></i>
                    <i class="fa fa-cloud" style="margin-right: 10px; font-size: 1.5em; color: whitesmoke"></i>
                    <i class="fa fa-truck" style="transform: scaleX(-1);color:gray;font-size:10em"></i>
                </div>
            </div>
            <!--

            -->
            <div id="drop" class="fond" style="background-color: #D32A2F">
                &nbsp;
                <div class="static topBottom" style="top:-300px;left:35%;">
                    <i class="fa fa-tint" style="font-size:8em;color:black"></i>
                </div>
                <div class="contenu">
                    <h2>@Resources.AccueilTitreDrops</h2>

                </div>
            </div>
        </div>
    </div>
</div>

<div id="pageMobile">

    <div class="fondMobile normal">

        &nbsp;
