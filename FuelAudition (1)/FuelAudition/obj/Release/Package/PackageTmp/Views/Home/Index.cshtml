<div id="statistique" class="normal iconeAvecTexte" style="background-color:white;overflow:auto">
    <h2 style="margin-bottom:50px">@Resources.AccueilTitreStatistique</h2>
    <div style="vertical-align:middle">

        <div class="col-md-6 col-sm-6 graphique">

            <div class="icone">
                <i class="fa fa-line-chart" style=""></i>
            </div>
            <div class="texte hidden-xs hidden-sm" style="margin-right:20px">
                @Resources.AccueilStatistiqueGraph1
            </div>

            <div class="texte hidden-md hidden-lg">
                @Resources.AccueilStatistiqueGraph1
            </div>

        </div>

        <div class="col-md-6 col-sm-6 graphique">

            <div class="icone">
                <i class="fa fa-area-chart"></i>
            </div>
            <div class="texte">
                @Resources.AccueilStatistiqueGraph2
            </div>

        </div>
        <div class="col-md-6" style="min-width:730px">
            <img src="~/Content/Images/Graphique.jpg" />

        </div>
        <div class="col-md-6">
            <div style="font-size: 1.5em;border: 5px solid black;padding: 20px 20px 20px 20px;">
                @Resources.AccueilStatistiqueErreurFacturation
            </div>

        </div>
    </div>

</div>
<div id="ethique" class="normal">
    <div class="boiteNoire">
        <h2 style="margin-bottom:50px;">@Resources.AccueilTitreEthique</h2>
        <div class="row">
            <div style="vertical-align:middle">

                <div id="securite" class="col-md-3 col-sm-3 col-xs-3">


