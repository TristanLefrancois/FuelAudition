@model FuelAudition.Models.ViewModel.ClientDetailVM

@{
    if (Model.ClientId > 0)
    {
        ViewBag.Title = Resources.ClientDetailTitreModification;
    }
    else
    {
        ViewBag.Title = Resources.ClientDetailTitreCreation;
    }

    ViewBag.Description = Resources.ClientDetailSousTitre;

}

@if (Model.EstEnregistrerAvecSucces)
{
    <div>
        <div class="callout callout-success">
            <h4><i class="fa fa-check-circle" style="margin-right:20px"></i>@Resources.GlobalEnregistrementMessage</h4>

        </div>

    </div>
}

<div class="row">

    <form id="client" name="client" action="@Url.Action("Details","Client")" method="post" >
        @Html.AntiForgeryToken()

        <input type="hidden" name="ClientId" id="ClientId" value="@Model.ClientId" />

        <div class="col-md-8">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <div class="box-body">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <h3 style="margin-top:5px">@Resources.ClientDetailsTitreSectionClient</h3>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Nom, new { @class = "control-label" })

                            @Html.TextBoxFor(model => model.Nom, new { @class = "form-control", maxlength = 100 })
                            @Html.ValidationMessageFor(model => model.Nom, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-group">

                            <div class="col-md-4 form-group" style="padding:0px">
                                @Html.LabelFor(model => model.Telephone, new { @class = "control-label" })

                                <div class="input-group" >
                                    @Html.TextBoxFor(m => m.Telephone, new { @class = "form-control", maxlength = 50 })
                                    <span class="input-group-addon"><i class="fa fa-phone"></i></span>
                                </div>
                                @Html.ValidationMessageFor(model => model.Telephone, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-md-3 col-md-offset-1 form-group" style="padding:0px">
                                @Html.LabelFor(model => model.Inter, new { @class = "control-label" })

                                @Html.TextBoxFor(model => model.Inter, new { @class = "form-control", maxlength = 10 })
                                @Html.ValidationMessageFor(model => model.Inter, "", new { @class = "text-danger" })

                            </div>
                        </div>
                        
                        <div class="clearfix hidden-sm hidden-xs"></div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.FAX, new { @class = "control-label" })

                            <div class="input-group col-md-4">
                                @Html.TextBoxFor(m => m.FAX, new { @class = "form-control", maxlength = 50 })
                                <span class="input-group-addon"><i class="fa fa-fax"></i></span>
                            </div>
                            @Html.ValidationMessageFor(model => model.FAX, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Email, new { @class = "control-label" })

                            <div class="input-group">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", maxlength = 250 })
                                <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                            </div>
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Adresse1, new { @class = "control-label" })

                            @Html.TextBoxFor(model => model.Adresse1, new { @class = "form-control", maxlength = 100 })
                            @Html.ValidationMessageFor(model => model.Adresse1, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Adresse2, new { @class = "control-label" })

                            @Html.TextBoxFor(model => model.Adresse2, new { @class = "form-control", maxlength = 50 })
                            @Html.ValidationMessageFor(model => model.Adresse2, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.VilleId, new { @class = "control-label" })

                            @Html.DropDownListFor(model => model.VilleId, Model.Villes, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.VilleId, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.CodePostal, new { @class = "control-label" })
                            <div class="input-group col-md-4">
                                @Html.TextBoxFor(model => model.CodePostal, new { @class = "form-control", maxlength = 10 })
                               
                            </div>
                           
                            @Html.ValidationMessageFor(model => model.CodePostal, "", new { @class = "text-danger" })

                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.LangueId, new { @class = "control-label" })
                            <div class="input-group col-md-4">
                                @Html.DropDownListFor(model => model.LangueId, Model.Langues, new { @class = "form-control" })

                            </div>

                            @Html.ValidationMessageFor(model => model.LangueId, "", new { @class = "text-danger" })

                        </div>
                        <hr />
                        <h3>@Resources.ClientDetailsTitreSectionContact</h3>
                        <div class="form-group">
                            @Html.LabelFor(model => model.ContactNom, new { @class = "control-label" })

                            @Html.TextBoxFor(model => model.ContactNom, new { @class = "form-control", maxlength = 50 })
                            @Html.ValidationMessageFor(model => model.ContactNom, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-group">

                            <div class="col-md-4 form-group" style="padding:0px">
                                @Html.LabelFor(model => model.ContactTelephone, new { @class = "control-label" })

                                <div class="input-group">
                                    @Html.TextBoxFor(m => m.ContactTelephone, new { @class = "form-control", maxlength = 50 })
                                    <span class="input-group-addon"><i class="fa fa-phone"></i></span>
                                </div>
                                @Html.ValidationMessageFor(model => model.ContactTelephone, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-md-3 col-md-offset-1 form-group" style="padding:0px">
                                @Html.LabelFor(model => model.ContactInter, new { @class = "control-label" })

                                @Html.TextBoxFor(model => model.ContactInter, new { @class = "form-control", maxlength = 10 })
                                @Html.ValidationMessageFor(model => model.ContactInter, "", new { @class = "text-danger" })

                            </div>
                        </div>
                        <div class="clearfix hidden-sm hidden-xs"></div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.ContactEmail, new { @class = "control-label" })

                            <div class="input-group">
                                @Html.TextBoxFor(m => m.ContactEmail, new { @class = "form-control", maxlength = 250 })
                                <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                            </div>
                            @Html.ValidationMessageFor(model => model.ContactEmail, "", new { @class = "text-danger" })

                        </div>

                        
                        <hr />
                        <div class="form-group pull-right">

                            <input type="submit" value="@Resources.GlobalBoutonEnregistrer" class="btn btn-primary" />

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
