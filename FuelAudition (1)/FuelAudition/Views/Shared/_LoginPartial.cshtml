@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink(Resources.Salutation + " " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">@Resources.Deconnexion</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
<!--
            <li>@Html.ActionLink(Resources.Inscription, "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        -->
        <li>@Html.ActionLink(Resources.Connexion, "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
